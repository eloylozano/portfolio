---
import StackCard from "./StackCard.astro";
import Title from "./Title.astro";
import { t } from "../i18n";

const lang =
  Astro.request.headers.get("cookie")?.match(/preferredLang=([^;]+)/)?.[1] ||
  "es";
---

<article class="text-white">
  <Title text={t(lang, "pages.stack.title")} class="text-center" />

  <div
    class="container mx-auto max-w-full flex flex-wrap justify-center mt-12 gap-y-8 gap-x-6 px-4"
  >
    <div class="w-fit sm:w-1/2 lg:w-fit mx-auto">
      <StackCard
        title={t(lang, "pages.stack.web")}
        icons={[
          { src: "/images/icons/astro.png", alt: "Astro" },
          { src: "/images/icons/svelte.png", alt: "Svelte" },
          { src: "/images/icons/spring.png", alt: "Spring" },
          { src: "/images/icons/symfony.png", alt: "Symfony" },
          { src: "/images/icons/react.png", alt: "React" },
          { src: "/images/icons/angular.png", alt: "Angular" },
          { src: "/images/icons/vite.png", alt: "Vite" },
        ]}
      />
    </div>

    <div class="w-fit sm:w-1/2 lg:w-fit mx-auto">
      <StackCard
        title={t(lang, "pages.stack.ai")}
        icons={[
          { src: "/images/icons/openai.png", alt: "OpenAI" },
          { src: "/images/icons/ollama.png", alt: "Ollama" },
          // { src: "/images/icons/huggingface.png", alt: "Hugging Face" },
          // { src: "/images/icons/langchain.png", alt: "LangChain" },
          { src: "/images/icons/python.png", alt: "Python" },
          { src: "/images/icons/pytorch.png", alt: "PyTorch" },
          { src: "/images/icons/tensorflow.png", alt: "TensorFlow" },
        ]}
      />
    </div>

    <div class="w-fit sm:w-1/2 lg:w-fit mx-auto">
      <StackCard
        title={t(lang, "pages.stack.data")}
        icons={[
          { src: "/images/icons/sqlserver.svg", alt: "SQLServer" },
          { src: "/images/icons/mongo.png", alt: "MongoDB" },
          { src: "/images/icons/postgreSQL.png", alt: "PostgreSQL" },
          { src: "/images/icons/pwbi.svg", alt: "PowerBi" },
          // { src: "/images/icons/numpy.png", alt: "Numpy" },
          { src: "/images/icons/pandas.png", alt: "Pandas" },
          { src: "/images/icons/apache.png", alt: "Apache" },
          // { src: "/images/icons/hive.png", alt: "Hive" },
          // { src: "/images/icons/spark.png", alt: "Spark" },
        ]}
      />
    </div>

    <div class="w-fit sm:w-1/2 lg:w-fit mx-auto">
      <StackCard
        title={t(lang, "pages.stack.design")}
        icons={[
          { src: "/images/icons/Photoshop.png", alt: "Photoshop" },
          { src: "/images/icons/Premiere.png", alt: "Premiere" },
          { src: "/images/icons/Lightroom.png", alt: "Lightroom" },
          { src: "/images/icons/Figma.png", alt: "Figma" },
          { src: "/images/icons/Canva.png", alt: "Canva" },
        ]}
      />
    </div>
  </div>

  <hr class="neon-hr hidden lg:block" />
</article>
<style>
  .neon-hr {
    height: 2px;
    border: none;
    background: #daa032;
    box-shadow:
      0 0 10px #daa032,
      0 0 20px #daa032,
      0 0 30px #daa032;
    margin: 4rem 0;
  }
</style>
