---
// Title.astro
const { text, class: additionalClass = "", as: Tag = "h2" } = Astro.props;
---

<Tag
  class={`text-4xl lg:text-6xl lg:leading-18 tracking-wide mb-6 font-serif bg-linear-to-r from-[#daa032] to-[#875F14] bg-clip-text text-transparent ${additionalClass}`}
  style="font-family: 'PT Serif', serif;"
>
  {text}
</Tag>