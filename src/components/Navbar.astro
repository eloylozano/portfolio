---
// src/components/Navbar.astro
const navItems = [
  { label: 'Home', link: 'home' },
  { label: 'Sobre m√≠', link: 'about' },
  { label: 'Proyectos', link: 'projects' },
  { label: 'Contacto', link: 'contact' }
];
---

<nav class="fixed top-6 left-1/2 -translate-x-1/2 z-50 bg-gray-400/10 backdrop-blur-md border border-white/20 rounded-full flex shadow-xl p-0.5 items-center justify-center">
  {navItems.map((item) => (
    <a
      href={`#${item.link}`}
      class="relative text-sm text-white rounded-full transition-all py-1.5 px-6 cursor-pointer select-none group"
    >
      {item.label}
      <span class="absolute left-1/2 -bottom-1.5 -translate-x-1/2 w-8 h-1.5 bg-white rounded-full opacity-0 transition-all group-hover:opacity-100 group-hover:w-6 group-[.active]:opacity-100 group-[.active]:w-6"></span>
    </a>
  ))}
</nav>
