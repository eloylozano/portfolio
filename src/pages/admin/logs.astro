---
import { createClient } from '@supabase/supabase-js';

// Esto solo se ejecuta en el servidor
const supabase = createClient(
  import.meta.env.SUPABASE_URL,
  import.meta.env.SUPABASE_ANON_KEY
);

// Obtenemos los últimos 50 logs
const { data: logs, error } = await supabase
  .from('chat_logs')
  .select('*')
  .order('created_at', { ascending: false })
  .limit(50);
---

<html lang="es">
<head>
    <title>Alter Ego | Analytics</title>
    <style>
        body { background: #050505; color: #eee; font-family: sans-serif; padding: 2rem; }
        .log-card { border: 1px solid #222; padding: 1rem; margin-bottom: 1rem; border-radius: 8px; background: #0a0a0a; }
        .user-msg { color: #888; font-size: 0.9rem; margin-bottom: 0.5rem; }
        .ai-res { color: #00d4ff; border-left: 2px solid #00d4ff; padding-left: 1rem; }
        .meta { font-size: 0.7rem; color: #444; margin-top: 0.5rem; text-transform: uppercase; }
        h1 { color: #fff; border-bottom: 1px solid #333; padding-bottom: 1rem; }
    </style>
</head>
<body>
    <h1>Interacciones del Alter Ego</h1>
    
    {logs?.map((log) => (
        <div class="log-card">
            <div class="user-msg"><strong>Pregunta:</strong> {log.user_message}</div>
            <div class="ai-res"><strong>Respuesta:</strong> {log.ai_response}</div>
            <div class="meta">
                {new Date(log.created_at).toLocaleString()} | Tokens: {log.tokens_used} | Lang: {log.language}
            </div>
        </div>
    ))}

    {logs?.length === 0 && <p>Aún no hay interacciones registradas.</p>}
</body>
</html>